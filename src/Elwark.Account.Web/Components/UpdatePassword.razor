@using Elwark.Account.Web.ViewModels
@inject IUpdatePasswordViewModel ViewModel

<EditForm Model="@ViewModel.Model" OnValidSubmit="@ViewModel.UpdateAsync" class="card">
    <FluentValidator/>
    <div class="card-body">
        <div class="form-group">
            <label>Current password</label>
            <InputText type="password" @bind-Value="ViewModel.Model.Current" class="form-control" placeholder="Current password"/>
            <ValidationMessage For="@(() => ViewModel.Model.Current)"/>
        </div>

        <div class="form-group">
            <label>New password</label>
            <InputText type="password" @bind-Value="ViewModel.Model.Password" class="form-control" placeholder="New password"/>
            <ValidationMessage For="@(() => ViewModel.Model.Password)"/>
        </div>

        <div class="form-group">
            <label>Confirm new password</label>
            <InputText type="password" @bind-Value="ViewModel.Model.Confirmation" class="form-control" placeholder="Confirm new password"/>
            <ValidationMessage For="@(() => ViewModel.Model.Confirmation)"/>
        </div>

        <div class="row">
            <div class="col-auto">
                <LoadingButton IsLoading="@ViewModel.IsLoading" Type="submit" Title="Update password" Icon="fa-shield-alt"/>
            </div>
        </div>

    </div>
</EditForm>